{
  "compilerOptions": {
    "jsx": "preserve",
    "jsxFactory": "h",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "experimentalDecorators": true
  }
}
